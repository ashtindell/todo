<% provide(:title, "All Tasks") %>

<div class="title">
  <h1 class="text-center">All Tasks</h1>
</div>

<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th colspan="3"></th>
  </tr>
 
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td class="button-cell text-center"><%= link_to 'Show', task_path(task), 
                                  class: "" %></td>
      <td class="button-cell text-center"><%= link_to 'Edit', edit_task_path(task), 
                                  class: "" %></td>
      <td class="button-cell text-center"><%= link_to 'Delete', task_path(task),
                 method: :delete, data: { confirm: 'Are you sure?' }, 
                                  class: "" %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'Create New Task', new_task_path, class: "btn btn-default" %>
